#!/bin/sh

# Syntax bin/compile <build-dir> <cache-dir>

BUILD_DIR=$1
CACHE_DIR=$2

# TODO: avoid hardcoding 'public' dir name; adjust for different app types.
PUBLIC_DIR=$BUILD_DIR/public

VERSION_FILE="$PUBLIC_DIR/source_version"

echo "=====> Writing out SOURCE_VERSION to $VERSION_FILE ($SOURCE_VERSION)"
echo $SOURCE_VERSION > $VERSION_FILE
